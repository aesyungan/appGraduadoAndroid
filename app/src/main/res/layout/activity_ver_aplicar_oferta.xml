<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="itsbolivar.edu.ec.appgraduado.VerAplicarOferta">

    <!-- TODO: Update blank fragment layout -->
    <android.support.design.widget.CoordinatorLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"


        tools:context="itsbolivar.edu.ec.appgraduado.VerAplicarOferta">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/MyAppbarVerAplicarOferta"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:background="@color/blanco"
            android:fitsSystemWindows="true">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapse_toolbarVerAplicarOferta"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/imgCardsFondo"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />



                <android.support.v7.widget.Toolbar
                    android:id="@+id/MyToolbarVerAplicarOferta"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginBottom="0dp"

                    android:gravity="center"
                    android:paddingTop="0dp"
                    app:expandedTitleGravity="center_horizontal"
                    app:layout_collapseMode="parallax" />

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_vertical"

            android:fillViewport="true"
            android:scrollbars="none"

            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgHeaderVerAplicarOferta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fitsSystemWindows="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/si"
                        app:layout_collapseMode="pin" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="6dp"
                        android:text="Descripción :"
                        android:textColor="@color/titulo"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txtDetalleCarac_cargoVerAplicarOferta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="getente del departamento de ventas  de la empresa"
                        android:textColor="@color/respuesta" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="6dp"
                        android:text="Cargo :"
                        android:textColor="@color/titulo"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txtDetalleCargoVerAplicarOferta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="Gerente"
                        android:textColor="@color/respuesta" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="6dp"
                        android:text="Sueldo $:"
                        android:textColor="@color/titulo"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txtDetalleSueldoVerAplicarOferta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="10"
                        android:textColor="@color/respuesta" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="6dp"
                        android:text="Experiencia :"
                        android:textColor="@color/titulo"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txtDetalleExperienciaVerAplicarOferta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="2 años"
                        android:textColor="@color/respuesta" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="6dp"
                        android:text="Dirección :"
                        android:textColor="@color/titulo"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txtDetalleDireccionVerAplicarOferta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="Roma Viewna"
                        android:textColor="@color/respuesta" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="6dp"
                        android:text="Fecha Aplica :"
                        android:textColor="@color/titulo"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txtDetalleFechaAplicaVerAplicarOferta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="2017/18/1"
                        android:textColor="@color/respuesta" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="6dp"
                        android:text="Fecha Inicio :"
                        android:textColor="@color/titulo"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txtDetalleFechaInicioVerAplicarOferta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="24Enero"
                        android:textColor="@color/respuesta" />

                </LinearLayout>
            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>

</FrameLayout>